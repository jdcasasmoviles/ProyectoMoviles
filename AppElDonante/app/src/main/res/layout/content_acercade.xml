<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jdcasas.appeldonante.AcercadeActivity"
    android:background="#ffffff"
    tools:showIn="@layout/activity_acercade">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView8" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView android:id="@+id/link_to_register"
                android:text="Acerca de "
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textSize="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_azul"
                android:textColor="#ffffff"
                />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_weight="0.3">
            <ImageView
                android:src="@drawable/android3"
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip">
                android:gravity="center"
            </ImageView>
        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_weight="0.7">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hecho por :"
                    android:background="@drawable/rounded_corners_spiner"
                    android:textSize="@dimen/formularioletra"
                    android:layout_marginTop="25dip"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tomas J. Casas Rodriguez"
                    android:textSize="@dimen/formularioletra"
                    android:layout_marginTop="5dip"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estudiante de : :"
                    android:background="@drawable/rounded_corners_spiner"
                    android:textSize="@dimen/formularioletra"
                    android:layout_marginTop="25dip"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciencia de la computacion"
                    android:textSize="@dimen/formularioletra"
                    android:layout_marginTop="5dip"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Curso: :"
                    android:background="@drawable/rounded_corners_spiner"
                    android:textSize="@dimen/formularioletra"
                    android:layout_marginTop="25dip"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programacion en dispositivos moviles"
                    android:textSize="@dimen/formularioletra"
                    android:layout_marginTop="5dip"
                    />
            </LinearLayout>
        </LinearLayout>
     </LinearLayout>
    </ScrollView>
</RelativeLayout>
